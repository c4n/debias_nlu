allennlp predict  $MODEL_DIR/model.tar.gz  data/nli/multinli_1.0_train.jsonl --output-file $MODEL_DIR/raw_train_result_0.jsonl --batch-size 64 --cuda-device 0 --predictor textual_entailment  --silent 
